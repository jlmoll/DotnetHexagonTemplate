{
  "$schema": "http://json.schemastore.org/template",
  "author": "jlmoll",
  "classifications": ["WebAPI", "Hexagonal Architecture"],
  "identity": "jlmoll.HexaTemplate",
  "name": "Hexagonal WebAPI template",
  "shortName": "hexagonapi",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "HexaTemplate",
  "preferNameDirectory": true,
  "primaryOutputs": [
    { "path": "Api/jlmoll.HexaTemplate.Api.csproj" },
    { "path": "Domain/jlmoll.HexaTemplate.Domain.csproj" },
    { "path": "Application/jlmoll.HexaTemplate.Application.csproj" },
    { "path": "Infrastructure/jlmoll.HexaTemplate.Infrastructure.csproj" }
  ],
  "symbols": {
    "company": {
      "type": "parameter",
      "dataType": "string",
      "defaultValue": "YourCompany",
      "replaces": "jlmoll",
      "description": "The company name which is meant to be used in namespaces and other relevant places."
    }
  }
}
